        <div class="flex-column">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="row nav-link btn btn-lg btn-primary" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a><br />
                <a class="row nav-link btn btn-lg btn-primary" asp-area="Admin" asp-controller="Roles" asp-action="Index">Roles</a><br />
                <a class="row nav-link btn btn-lg btn-primary" asp-area="Admin" asp-controller="Posts" asp-action="AllPosts">Posts</a><br />
            </div>
        </div>
    </div>
}

